# =================================
# Customer Service AI Configuration
# =================================

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
PROJECT_NAME=Customer Service AI
API_V1_STR=/api/v1

# Security (‚ö†Ô∏è Generate new SECRET_KEY for production)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Hugging Face API (üîë Get free API key from https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=hf_your_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co
HUGGINGFACE_TIMEOUT=30

# Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# External APIs
EXTERNAL_API_TIMEOUT=10
EXTERNAL_API_RETRIES=3

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Additional Settings
ALLOWED_HOSTS=["*"]